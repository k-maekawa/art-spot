<div class="contents row">
  <div class="container">
    <h2>編集</h2>
  
    <%= form_for @user do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name , placeholder: "name" %>
      </div>

      <div class="field">
        <%= f.label :image %><br />
        <%= f.file_field :image %>
      </div>

      <div class="field">
        <%= f.label :profile %><br />
        <%= f.text_field :text, placeholder: "profile"  %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "更新" %>
      </div>
    <% end %>
  </div>
</div>