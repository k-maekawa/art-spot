<div class="user-show">
  <div class="user-left">
    <% if @user.image? %>
      <%= image_tag @user.image.url, class: "user-image" %>
    <% else %>
      <%= image_tag 'noimage.png',class: "user-image" %>
    <% end %>
  </div>
  <div class="user-right">
    <div class="user-name">
      <%= @user.name %>
    </div>
    <div class="user-email">
      <% if @user.id == current_user.id %>
        <%= @user.email %>
      <% end %>
    </div>
    <div class="user-text">
      <%= @user.text %>
    </div>
    <div class="user-edit">
      <% if @user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(@user) %>
      <% end %>
    </div>
  </div>
</div>

<div class="post-box">
  <% @user.posts.each do |post| %>
    <div class="post">
      <%= link_to spot_post_path(post.spot.id, post.id) do %>
        <%= image_tag post.image.url, class: "post-image" %>
      <% end %>
      <p class="create-time"><%= post.created_at.strftime("%Y年%m月%d日 %H時%M分") %></p> 
    </div>
  <% end %>
</div>